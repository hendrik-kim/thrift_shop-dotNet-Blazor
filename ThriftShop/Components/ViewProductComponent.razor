@page "/product/{id:int}"
@inject IViewProduct viewPorduct

<h3>ViewProductComponent</h3>

@code {
    private Product product;

    [Parameter]
    public int Id { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if(Id > 0)
        {
            product = viewPorduct.Execute(Id);
        }
    }
}
